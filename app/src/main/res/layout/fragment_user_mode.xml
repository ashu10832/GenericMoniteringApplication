<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="layout.UserMode"
    android:background="#311B92">

    <!-- TODO: Update blank fragment layout -->

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:src="@android:drawable/ic_dialog_email"
        android:layout_marginRight="41dp"
        android:layout_marginBottom="35dp"
        android:layout_marginEnd="41dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ALERTS"
        android:id="@+id/alertsbtn"
        android:background="@drawable/ripple_2"
        android:textColor="#311B92"
        android:textSize="18sp"
        android:ems="9"
        android:layout_marginTop="133dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal|bottom" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ACTUATION"
        android:id="@+id/actuationbtn"
        android:layout_marginTop="70dp"
        android:background="@drawable/ripple_2"
        android:textColor="#311B92"
        android:textSize="18sp"
        android:ems="9"
        android:layout_below="@+id/alertsbtn"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal|top" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DATA"
        android:id="@+id/databtn"
        android:background="@drawable/ripple_2"
        android:textColor="#311B92"
        android:textSize="18sp"
        android:ems="9"
        android:layout_below="@+id/actuationbtn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:layout_gravity="center" />

</RelativeLayout>
